<Window x:Class="WpfArabicIDE.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إعدادات" Height="180" Width="520" FlowDirection="RightToLeft">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="مسار المترجم:" Margin="0,0,8,0"/>
            <TextBox x:Name="CompilerPathText" Width="360"/>
            <Button Content="استعراض" Margin="8,0,0,0" Click="Browse_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="حفظ" Width="80" Margin="8,0,0,0" Click="Save_Click"/>
            <Button Content="إلغاء" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
